{
  "name": "calisero/laravel-sms",
  "description": "Laravel package for sending SMS through Calisero API",
  "type": "library",
  "license": "MIT",
  "keywords": ["laravel", "sms", "calisero", "notifications"],
  "authors": [
    {
      "name": "Calisero",
      "email": "support@calisero.ro"
    }
  ],
  "require": {
    "php": "^8.2 || ^8.4",
    "illuminate/support": "^12.0",
    "illuminate/notifications": "^12.0",
    "illuminate/validation": "^12.0",
    "illuminate/routing": "^12.0",
    "illuminate/console": "^12.0",
    "calisero/calisero-php": "^2.0"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0|^9.0|^10.0",
    "phpunit/phpunit": "^11.5 || ^12.0",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.59",
    "mockery/mockery": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "Calisero\\LaravelSms\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Calisero\\LaravelSms\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Calisero\\LaravelSms\\ServiceProvider"
      ],
      "aliases": {
        "Calisero": "Calisero\\LaravelSms\\Facades\\Calisero"
      }
    }
  },
  "scripts": {
    "cs:check": "PHP_CS_FIXER_IGNORE_ENV=1 php -d memory_limit=256M vendor/bin/php-cs-fixer fix --dry-run --format=txt",
    "cs:fix": "PHP_CS_FIXER_IGNORE_ENV=1 php -d memory_limit=256M vendor/bin/php-cs-fixer fix --diff --ansi",
    "lint": "@cs:check",
    "format": "@cs:fix",
    "stan": "phpstan analyse --memory-limit=1G",
    "test": "phpunit --colors=always",
    "qa": "composer validate --ansi && composer cs:check && composer stan && composer test"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
